page {
    height: 100%;
}

text {
    font-size: 22rpx;
    font-weight: bold;
    color: #405f80;
}

.top-box {
    display: flex;
    align-items: center;
    justify-content: center;
}

.original-img {
    width: 400px;
    height: 400px;
    margin: 0 auto;
}

.bg-img {
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(230,225,225,0.8);
}

.bottom>view.tab {
    padding-right: 30rpx;
    padding-left: 30rpx;
}

.recommend_scroll_x_box {
    margin-left: 10rpx;
    height: 130rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    width: 100%;
    overflow: auto;
    white-space: nowrap;
    display: flex;
    vertical-align: top;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.sticker-lists-body .sticker-list {
    width: 150rpx;
    height: 150rpx;
    display: inline-block;
    vertical-align: top;
}

.sticker-lists-body .sticker-list image {
    background-color: #fff;
}

.bottom image {
    width: 130rpx;
    height: 130rpx;
}

.bottom .tab image {
    margin-right: 60rpx;
}

.bottom .tab {
    padding: 25rpx 60rpx;
    background-color: #f4f4f4;
    height: 70rpx;
}

.bottom .tab .tab-list {
    position: relative;
    float: left;
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}

.bottom .tab button {
    background-color: #d81e06;
    float: left;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 22rpx;
    padding-left: 25rpx;
    padding-right: 25rpx;
    width: 20%;
}

.bottom .tab button.color-red {
    background-color: #fff;
    border: 1rpx solid #d81e06;
    margin-right: 10rpx;
}

.bottom .tab .tab-list image.active::before {
    content: '';
    position: absolute;
    top: -50rpx;
    left: 5rpx;
    border-right: 20rpx solid transparent;
    border-left: 20rpx solid transparent;
    border-bottom: 20rpx solid #f4f4f4;
}

movable-view .sticker-box {
    position: relative;
    width: 100%;
    height: 100%;
    border: 1rpx dashed #ccc;
}

image.cancel {
    position: absolute;
    top: -15rpx;
    left: -15rpx;
    width: 30rpx;
    height: 30rpx;
    z-index: 30;
}

.canvas-box {
    opacity: 0;
    position: fixed;
    top: 100%;
    left: 0;
    z-index: -1;
}

.canvas-box canvas {
    opacity: 0;
}

.body-view {
    margin-top: 20rpx;
    width: 740rpx;
    display: flex;
    border: 1px solid #405f80;
    border-radius: 5px;
    text-align: center;
    height: 60rpx;
}