page {
    height: 100%;
    background-color: #fff;
}

contact-button {
    margin-top: 60rpx;
}

text {
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
}

form {
    width: 750rpx;
    height: 300rpx;
    margin-top: 60rpx;
    position: absolute;
}

input {
    font-size: 30rpx;
    width: 100%;
